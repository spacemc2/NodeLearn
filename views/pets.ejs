<%- include('template/header.ejs',{title: 'Service' }) %>

    <div class="container">

        <h1>CRUD Mongo</h1>
       

        <% if ( arrayPets.length> 0) { %>



            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Action</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% arrayPets.forEach(element=> { %>

                        <tr>
                            <th scope="row">
                                <%= element.id %>
                            </th>
                            <td>
                                <%= element.name %>
                            </td>
                            <td>
                                <%= element.description %>
                            </td>
                            <td>
                                <a href="pets/<%= element.id %>" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>

                        <% }) %>

                </tbody>
            </table>



            <% } %>
            <a class="btn btn-success btn-block col-12" href="/pets/create">New pet</a>
    </div>

    <%- include('template/footer.ejs') %>